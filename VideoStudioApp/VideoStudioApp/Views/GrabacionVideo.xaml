<Window x:Class="VideoStudioApp.Views.GrabacionVideo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="Window_Loaded"
      WindowStyle="None" ResizeMode="NoResize"  WindowState="Maximized" WindowStartupLocation="CenterScreen" 
         xmlns:cam="clr-namespace:WebcamControl;assembly=WebcamControl"  
        Title="GrabacionVideo" Height="768" Width="1024">
    <Grid Background="#FFC9C9C9">
        <cam:Webcam Name="WebcamCtrl" Width="640" Height="480" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="79,28,72,116"/>
      
        <Button Content="Grabar" 
                Command="{Binding GrabarCommand}" HorizontalAlignment="Left"   Margin="30,30"
                VerticalAlignment="Bottom" Width="122" Height="54"/>
    </Grid>
</Window>
