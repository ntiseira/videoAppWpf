<Window x:Class="VideoStudioApp.Views.ConfigDispositivos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="Window_Loaded"
        WindowStyle="None" ResizeMode="NoResize"  WindowState="Maximized" WindowStartupLocation="CenterScreen" 
        Title="ConfigDispositivos" Height="768" Width="1024">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="339" Width="400" Margin="58,28,58,44">
            <ComboBox HorizontalAlignment="Center"  SelectedValue="{Binding Path=SelectedVideoDevice}" DisplayMemberPath="Name" ItemsSource="{Binding Path=VideoDevices}" Height="29"  VerticalAlignment="Top" Width="309"/>
            <ComboBox HorizontalAlignment="Center"  SelectedValue="{Binding Path=SelectedAudioDevice}" DisplayMemberPath="Name"  ItemsSource="{Binding Path=AudioDevices}" Height="27"  Margin="0,30" VerticalAlignment="Top" Width="309"/>
            <Button Content="Preview" Command="{Binding IniciarPreviewCommand}" HorizontalAlignment="Center" Height="47" Margin="0,30" VerticalAlignment="Top" Width="112"/>
        </StackPanel>
    </Grid>
</Window>
