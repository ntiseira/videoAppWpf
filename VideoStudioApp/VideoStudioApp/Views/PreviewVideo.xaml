<Window x:Class="VideoStudioApp.Views.PreviewVideo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              WindowStyle="None" ResizeMode="NoResize"  WindowState="Maximized" WindowStartupLocation="CenterScreen"  Loaded="Window_Loaded"
        xmlns:cam="clr-namespace:WebcamControl;assembly=WebcamControl"         
        
       Title="GrabacionVideo" Height="768" Width="1024">
    <Grid>
        <cam:Webcam Name="WebcamCtrl" Width="640" Height="480" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="79,28,72,116"/>
        <WrapPanel Margin="0,596,48,0" HorizontalAlignment="Center">

            <Button Content="Cancelar" 
                Command="{Binding CancelarCommand}" HorizontalAlignment="Center"  Width="154" />
            <Button Content="Aceptar" 
                Command="{Binding IniciarConfigDatosLugarCommand}" HorizontalAlignment="Right"  
                VerticalAlignment="Top" Width="122" Height="54" />
        </WrapPanel>
    </Grid>
</Window>
